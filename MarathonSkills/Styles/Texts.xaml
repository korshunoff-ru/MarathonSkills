<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:MarathonSkills">

    <Style x:Key="MainHeaderTextStyle" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource BaseTextBlockStyle}">
        <Setter Property="FontFamily" Value="{StaticResource OpenSansSemibold}"/>
        <Setter Property="FontSize" Value="{StaticResource VeryBigFont}"/>
        <Setter Property="Foreground" Value="{StaticResource WhiteBrush}"/>
    </Style>
    
    <Style x:Key="HeaderTextStyle" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource BaseTextBlockStyle}">
        <Setter Property="FontFamily" Value="{StaticResource OpenSansSemibold}"/>
        <Setter Property="FontSize" Value="{StaticResource MiddleFont}"/>
    </Style>

</ResourceDictionary>